pipeline {
    agent any
    //「Global Tool Configuration」で設定したnameを指定
    stages {
        stage('Backend Deploy to Apache') {
            steps {
                sh '''
                sudo rm -rf /api/*
                rsync -av --no-owner --no-group --no-times backend/ /api/
                sudo systemctl restart fastapi
                '''
            }
        }
    }
}
